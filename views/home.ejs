<%-include( "partials/header" )%>

    <main class="main">

        <section class="py-4 text-center container">
            <div class="row justify-content-center py-lg-5">
                <div class="col-lg-6 col-md-8 text-center">
                    <h1 class="fw-light">Welcome to Journee</h1>
                    <p class="lead text-body-secondary">

                        Unleash your inner author! Ink your adventures, secrets, and dreams on Journee.
                        Spark your muse with playful prompts, and witness your epic growth. Join the journaling
                        revolution – reclaim your narrative, one vibrant entry at a time! ✨
                    </p>
                    <p>
                        <a href="/compose" class="btn btn-secondary outline-dark my-2">Start Writing✒️</a>
                    </p>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-body-tertiary  ">
            <div class="container">
                <div class="row g-3">
                    <% allPost.forEach((elem)=> { %>
                        <div class=" col-sm-6  col-md-6 col-lg-4 col-xl-4">
                            <div class="card shadow-sm d-flex justify-content-center align-items-center ">
                                <div class="card-body d-flex flex-column p-3 pb-3 pt-3 " style="min-height: 250px;">
                                    <h1 class="card-title border rounded pb-2 text-center   ">
                                        <%= elem.title %>
                                    </h1>
                                    <% const sliced=elem.post.slice(0, 200); %>
                                        <p class="card-text mt-3">T<%= sliced %>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center mt-3 mt-auto">
                                            <div class="">
                                                <a href="/<%= elem.title %>"
                                                    class="btn btn-sm btn-outline-secondary ">Read More...</a>
                                                <button type="button "
                                                    class="btn btn-sm btn-outline-secondary">Edit</button>
                                                <button type="button "
                                                    class="btn btn-sm btn-outline-danger">Delete</button>
                                            </div>
                                            <small class="text-body-secondary ">9 mins</small>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
        </div>

    </main>

    <%-include( "partials/footer" )%>